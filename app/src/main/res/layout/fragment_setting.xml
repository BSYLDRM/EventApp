<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    tools:context=".ui.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_button_background"
            android:text="@string/edit_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacer_64"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"

            />

        <TextView
            android:id="@+id/textOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/out"
            app:layout_constraintTop_toBottomOf="@id/textEditProfile"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/mini_button_background"
            android:layout_marginTop="@dimen/spacer_64"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>